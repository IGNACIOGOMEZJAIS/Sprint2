<div>
  <div>
    <a href="/paises">Volver al Dashboard</a>
  </div>

  <h1>Editar País: <%= pais.nombreOficial %></h1>

  <form action="/paises/editar/<%= pais._id %>" method="POST">
    <div>
      <label for="nombreOficial">Nombre Oficial:</label>
      <input type="text" id="nombreOficial" name="name[official]" value="<%= pais.name.official %>" required />    </div>

    <div>
      <label for="capital">Capital:</label>
      <input type="text" id="capital" name="capital" value="<%= pais.capital %>" required />
    </div>

    <div>
      <label for="area">Área (km²):</label>
      <input type="number" id="area" name="area" value="<%= pais.area %>" required />
    </div>

    <div>
      <label for="population">Población:</label>
      <input type="number" id="population" name="population" value="<%= pais.population %>" required />
    </div>

    <div>
      <label for="gini">Índice Gini:</label>
      <input type="number" id="gini" name="gini" value="<%= pais.gini %>" required />
    </div>

    <div>
      <label for="borders">Fronteras (separadas por comas):</label>
      <input type="text" id="borders" name="borders" value="<%= pais.borders.join(', ') %>" />
    </div>

    <div>
      <label for="timezones">Zonas Horarias (separadas por comas):</label>
      <input type="text" id="timezones" name="timezones" value="<%= pais.timezones.join(', ') %>" />
    </div>

    <div>
      <label for="creador">Creador:</label>
      <input type="text" id="creador" name="creador" value="<%= pais.creador %>" required />
    </div>

    <div>
      <button type="submit">Guardar Cambios</button>
    </div>
  </form>
</div>
