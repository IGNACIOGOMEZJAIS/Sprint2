
<div>
  <div>
    <h2>Lista de Superhéroes</h2>
    <a href="/superheroes/agregar">Agregar Nuevo Superhéroe</a>
  </div>

  <% if (superheroes && superheroes.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Nombre del Superhéroe</th>
          <th>Nombre Real</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% superheroes.forEach(superheroe => { %>
          <tr>
            <td><%= superheroe.nombreSuperHeroe %></td>
            <td><%= superheroe.nombreReal %></td>
            <td>
              <!-- Botón de Editar -->
              <a href="/superheroes/<%= superheroe._id %>/editar">Editar</a>

              <!-- Botón de Eliminar -->
              <form 
                action="/superheroes/<%= superheroe._id %>?_method=DELETE" 
                method="POST" 
                onsubmit="return confirm('¿Estás seguro de eliminar a este superhéroe?');">
                <button type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No hay superhéroes en la base de datos.</p>
  <% } %>
</div>

